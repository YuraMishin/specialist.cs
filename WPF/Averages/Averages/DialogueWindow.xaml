<Window x:Class="Averages.DialogueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Averages"
        mc:Ignorable="d"
        Title="Dialogue Window" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="20" />
      <RowDefinition Height="20" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <TextBlock>Input a number:</TextBlock>
    <TextBox x:Name="BxInput" Grid.Row="1" MinWidth="250"></TextBox>
    <WrapPanel Grid.Row="2" HorizontalAlignment="Right" Margin="0,15,0,0">
      <Button x:Name="BtnOk" IsDefault="True" MinWidth="60" Margin="0,0,10,0" Click="BtnOk_Click">OK</Button>
      <Button x:Name="BtnCancel" IsCancel="True" MinWidth="60">Cancel</Button>
    </WrapPanel>
  </Grid>
</Window>
