<Window x:Class="CurrencyCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CurrencyCalc"
        mc:Ignorable="d"
        Title="Currency Calculator" Height="300" Width="400" WindowStartupLocation="CenterScreen">
  <Grid>
    <Grid HorizontalAlignment="Center" Height="249" Margin="20,20,20,20" VerticalAlignment="Center" Width="355">
      <TextBox x:Name="TxtBxUSD" HorizontalAlignment="Left" Height="23" Margin="10,14,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="120"/>
      <TextBox x:Name="TxtBxRate" HorizontalAlignment="Left" Height="23" Margin="10,42,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="120"/>
      <Button x:Name="BtnConvert" Content="Convert" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Width="75" Click="BtnConvert_Click"/>
      <Label x:Name="LblRUB" Content="LblRUB" HorizontalAlignment="Left" Margin="10,95,0,0" VerticalAlignment="Top"/>
      <Label Content="USD" HorizontalAlignment="Left" Margin="135,11,0,0" VerticalAlignment="Top"/>
      <Label Content="Rate USD/RUB" HorizontalAlignment="Left" Margin="135,39,0,0" VerticalAlignment="Top"/>
    </Grid>


  </Grid>
</Window>
