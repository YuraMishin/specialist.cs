@model int

<td style="width: 150px">
  <div class="btn-group" role="group">
    <a title="Edit" class="btn btn-primary text-white"
       @* asp-action="Edit" *@
       asp-route-Id="@Model">
      <i class="fas fa-edit"></i>
    </a>
    <a title="Details" class="btn btn-success text-white"
       @* asp-action="Details" *@
       asp-route-Id="@Model">
      <i class="fas fa-list-alt"></i>
    </a>
    <a title="Delete" class="btn btn-danger text-white"
       @* asp-action="Delete" *@
       asp-route-Id="@Model">
      <i class="fas fa-trash-alt"></i>
    </a>
  </div>
</td>
