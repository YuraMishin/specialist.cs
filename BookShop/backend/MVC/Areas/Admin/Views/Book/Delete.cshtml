@model MVC.ViewModels.BookViewModel

@{
  ViewData["Title"] = "Delete";
}

<h2 class="text-info">Delete Menu Item</h2>
<form method="post">
  <div class="backgroundWhiteBorder row">
    <div class="col-8">
      <input type="hidden" asp-for="Book.Id"/>
      <fieldset disabled>
        <div class="form-group row">
          <div class="col-4">
            <label asp-for="Book.Name" class="custom-label"></label>
          </div>
          <div class="col-8">
            <input asp-for="Book.Name" class="form-control"/>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-4">
            <label asp-for="Book.Description" class="custom-label"></label>
          </div>
          <div class="col-8">
            @Html.TextAreaFor(m => m.Book.Description)
          </div>
        </div>
        <div class="form-group row">
          <div class="col-4">
            <label asp-for="Book.Price" class="custom-label"></label>
          </div>
          <div class="col-8">
            <input asp-for="Book.Price" class="form-control"/>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-4">
            <label asp-for="Book.CategoryId" class="custom-label"></label>
          </div>
          <div class="col-8">
            <input asp-for="Book.Category.Name" class="form-control"/>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-4">
            <label asp-for="Book.SubCategoryId" class="custom-label"></label>
          </div>
          <div class="col-8">
            <input asp-for="Book.SubCategory.Name" class="form-control"/>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-4">
            <label asp-for="Book.Age" class="custom-label"></label>
          </div>
          <div class="col-8">
            <select asp-for="Book.Age" asp-items="Html.GetEnumSelectList<Book.EAge>()" class="form-control"></select>
          </div>
        </div>
      </fieldset>
    </div>
    <div class="col-1"></div>
    <div class="col-3">
      <img src="@Model.Book.Image" width="100%" style="border-radius: 5px; border: 1px solid #bbb9b9;"/>
    </div>
    <div class="col-8">
      <div class="col-8 offset-4">
        <partial name="_DeleteAndBackToListButton" model="Model.Book.Id"/>
      </div>
    </div>
  </div>
</form>

@section Scripts{
  <script>
    tinymce.init({
      selector: 'textarea',
      plugins: "lists",
      toolbar:
        "undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist",
      menubar: 'file edit format',
      readonly: 1
    });
  </script>
  <script>
    tinymce.init({ selector: 'textarea' });
  </script>
}
